@{
    ViewData["Title"] = "login1";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        .image-button {
            border: none;
            background: none;
            padding: 0;
            margin: 20px auto;
            display: block;
            border-radius: 15px;
        }

        .text-center{
            font-family: Georgia, 'Times New Roman', Times, serif;
            font-size: 20px;
        }

        .image-button img {
/*                width: 100%;
                height: 100%;*/
            object-fit: cover;
            cursor: pointer;
            border-radius: 15px; /* Curved corners */
            
            }

         .image-button:hover {
            transform: translateY(-5px); /* Elevate the image */
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3); /* Shadow under the image */
            transition: transform 0.8s, box-shadow 0.8s;
         }
        
    </style>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Menu</h1>
    </div>

    <div class="button-container">
        <form method="get" action="/food">
            <input type="image" src="~/assets/horizFood.jpg" alt="Food" class="image-button " width="850" height="200" />
            
        </form>

        <form method="get" action="/Drink">
            <input type="image" src="~/assets/drinkHoriz.png" alt="Drink" class="image-button" width="850" height="200"/>
        </form>

        <form method="get" action="/dessert">
            <input type="image" src="~/assets/dessertHoriz.png" alt="Dessert" class="image-button" width="850" height="200" />
        </form>
    </div>
</body>
</html>
