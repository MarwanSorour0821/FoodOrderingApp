@model FoodApplication.Models.userViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <style>
        body {
            font-family: 'Georgia', serif;
            background-color: #FFFFFF; /* Background color similar to the screenshot */
            color: #0E0D32;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
        }

        h1 {
            font-size: 80px;
            text-align: center;
            margin-bottom: 40px;
            color: #0E0D32;
        }

        form {
            width: 320px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            font-size: 18px;
            margin-bottom: 8px;
            text-align: left;
            display: block;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #CCCCCC;
            border-radius: 5px;
            font-size: 16px;
            box-sizing: border-box;
        }

        .btn-primary {
            background-color: #0E0D32;
            color: white;
            padding: 15px;
            width: 100%;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            margin-top: 20px;
        }

            .btn-primary:hover {
                background-color: #333366;
            }

        .form-text {
            font-size: 12px;
            color: #666;
            text-align: left;
            display: block;
            margin-top: -10px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h1>Butler & Co.</h1>
    <form asp-controller="Login" asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="EmployeeID">Employee ID</label>
            <input asp-for="EmployeeID" class="form-control" type="text" placeholder="Enter your employee id" />
            <span asp-validation-for="EmployeeID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="password">Password</label>
            <input asp-for="password" class="form-control" type="password" placeholder="Enter your password" />
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a href="/ForgotPassword" class="form-text">Forgot Password?</a>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</body>
</html>


